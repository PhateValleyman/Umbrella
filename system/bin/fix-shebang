#!/system/bin/sh

if [ $# = 0 -o "$1" = "-h" ]; then
	echo 'usage: fix-shebang <files>'
	echo 'Rewrite shebangs in specified files for running under root,'
	echo 'which is done by rewriting #!*/bin/binary to #!/system/bin/binary.'
	exit 1
fi

for file in "$@"; do
	sed -i -E "1 s@^#\!(.*)/[sx]?bin/(.*)@#\!/system/bin/\2@" "$(realpath "${file}")"
done
